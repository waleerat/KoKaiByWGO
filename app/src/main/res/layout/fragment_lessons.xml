<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pink"
    tools:context=".ui.fragments.LessonsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            >

            <com.wgoweb.kokaibywgo.utils.MSPTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/menu_main_lesson"/>

            <ImageButton
                android:id="@+id/btn_sound_title"
                android:layout_width="@dimen/btn_menu_icon_width"
                android:layout_height="@dimen/btn_menu_icon_height"
                android:background="@android:color/transparent"
                android:contentDescription="Go next"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/sound_on"
                android:scaleType="fitXY"/>
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

                <!--Alphabet-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_pink_button_shape"
                    >
                    <ImageButton
                        android:id="@+id/btn_learn_alphabet_play"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/sound_on"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.wgoweb.kokaibywgo.utils.MSPTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:textSize="@dimen/btn_menu_textSize"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/menu_learn_alphabet"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_menu_learn_alphabets"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/go_to_next"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <!--Alphabet-->

                <!--Vowel-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_pink_button_shape"
                    >
                    <ImageButton
                        android:id="@+id/btn_learn_vowel_play"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/sound_on"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.wgoweb.kokaibywgo.utils.MSPTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:textSize="@dimen/btn_menu_textSize"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/menu_learn_vowel"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_menu_learn_vowels"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/go_to_next"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <!--Vowel-->


                <!--Vowel and Alphabet-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_pink_button_shape"
                    >
                    <ImageButton
                        android:id="@+id/btn_learn_vowel_and_alphabet_play"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/sound_on"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.wgoweb.kokaibywgo.utils.MSPTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:textSize="@dimen/btn_menu_textSize"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/menu_alphabet_and_vowel"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_menu_learn_vowels_and_alphabets"
                        android:layout_width="@dimen/btn_menu_icon_width"
                        android:layout_height="@dimen/btn_menu_icon_height"
                        android:background="@android:color/transparent"
                        android:contentDescription="Go next"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/go_to_next"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <!--Vowel and Alphabet-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_view_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_no_items_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/no_item_found"
                    android:textAlignment="center"
                    android:textSize="@dimen/no_item_found_textSize" />

            </LinearLayout>
    </LinearLayout>
</FrameLayout>